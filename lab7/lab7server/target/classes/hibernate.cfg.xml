<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- PostgreSQL Connection Settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/restaurant</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">sudo</property>
        
        <!-- Connection Pool Settings (HikariCP) -->
        <property name="hibernate.connection.provider_class">org.hibernate.hikaricp.internal.HikariCPConnectionProvider</property>
        <property name="hibernate.hikari.minimumIdle">5</property>
        <property name="hibernate.hikari.maximumPoolSize">20</property>
        <property name="hibernate.hikari.idleTimeout">300000</property>
        
        <!-- SQL Dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        
        <!-- Auto-create/update tables -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <!-- Show SQL queries in console -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        
        <!-- Current Session Context -->
        <property name="hibernate.current_session_context_class">thread</property>
        
        <!-- Cache Settings -->
        <property name="hibernate.cache.use_second_level_cache">false</property>
        
        <!-- Entity Mappings -->
        <mapping class="ru.tmchhhhhhhhhhhhh.javalabs.lab7client.common.model.Dish"/>
        <mapping class="ru.tmchhhhhhhhhhhhh.javalabs.lab7client.server.model.Order"/>
    </session-factory>
</hibernate-configuration>
